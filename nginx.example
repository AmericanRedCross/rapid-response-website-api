server {
  listen 80 default_server;
  listen [::]:80 default_server ipv6only=on;
        
  server_name webviz.redcross.org;  
  ## replace the above with your domain name that you will point to your assigned elastic IP

  error_log /var/log/nginx/webviz_error.log;

  location /ctp/ {
    proxy_pass http://localhost:3000/;
    ## make sure the above matches the port set in `config.js`
    
    # proxy_http_version 1.1;
    # proxy_set_header Upgrade $http_upgrade;
    # proxy_set_header Connection 'upgrade';
    # proxy_set_header Host $host;
    # proxy_cache_bypass $http_upgrade;
    # alias /ubuntu/Dropbox/rcrcsims/;

    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;
    proxy_redirect default;
  }

}
